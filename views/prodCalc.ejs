<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fairdesk - form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <!-- <link rel="stylesheet" href="/css/rateCalculator.css" /> -->
    <link rel="stylesheet" href="/css/common.css" />
  </head>
  <body>
    <nav>
      <h1>Fairdesk</h1>
    </nav>
    <div class="contain">
      <!-- The navigation panel -->
      <div class="side-nav">
        <div title="Expand" class="nav-items nav-toggle">
          <i class="fa-solid fa-bars" style="color: #ffffff"></i>
          <p class="nav-items-para">Navigation</p>
        </div>
        <div title="Client Data" class="nav-items" onclick="window.location.href = '/fairdesk/form/client'">
          <i class="fa-solid fa-user" style="color: #ffffff"></i>
          <p class="nav-items-para">Client Data</p>
        </div>

        <div class="nav-opt-wrap">
          <div title="Datasheet" class="datasheet-toggle nav-items">
            <i class="fa-solid fa-square-caret-down" style="color: #ffffff"></i>
            <p class="nav-items-para">Datasheet</p>
          </div>

          <div class="nav-labels-opt">
            <div title="Labels" class="nav-items" onclick="window.location.href = '/fairdesk/form/labels'">
              <i class="fa-solid fa-address-card" style="color: #ffffff"></i>
              <p class="nav-items-para">Labels</p>
            </div>
            <div title="TTR" class="nav-items" onclick="window.location.href = '/fairdesk/form/ttr'">
              <i class="fa-solid fa-ribbon" style="color: #ffffff"></i>
              <p class="nav-items-para">TTR</p>
            </div>
            <div title="Tape" class="nav-items" onclick="window.location.href = '/fairdesk/form/tape'">
              <i class="fa-solid fa-tape" style="color: #ffffff"></i>
              <p class="nav-items-para">Tape</p>
            </div>
          </div>
        </div>

        <div class="nav-opt-wrap">
          <div title="Care" class="care-toggle nav-items">
            <i class="fa-solid fa-circle-chevron-down" style="color: #ffffff"></i>
            <p class="nav-items-para">Care</p>
          </div>

          <div class="nav-care-opt">
            <div title="System ID" class="nav-items" onclick="window.location.href = '/fairdesk/form/systemid'">
              <i class="fa-solid fa-id-badge" style="color: #ffffff"></i>
              <p class="nav-items-para">System ID</p>
            </div>
            <div title="Care Call Report" class="nav-items" onclick="window.location.href = '/fairdesk/form/carecallreport'" >
              <i class="fa-solid fa-file" style="color: #ffffff"></i>
              <p class="nav-items-para">Call Report</p>
            </div>
            <div title="Care Workshop Report" class="nav-items" onclick="window.location.href = '/fairdesk/form/careworkshopreport'" >
              <i class="fa-solid fa-shop" style="color: #ffffff"></i>
              <p class="nav-items-para">Workshop Report</p>
            </div>
            <div title="Carelead" class="nav-items" onclick="window.location.href = '/fairdesk/form/carelead'">
              <i class="fa-solid fa-notes-medical" style="color: #ffffff"></i>
              <p class="nav-items-para">Lead</p>
            </div>
            <div title="Care Quote" class="nav-items" onclick="window.location.href = '/fairdesk/form/carequote'">
              <i class="fa-solid fa-quote-left" style="color: #ffffff"></i>
              <p class="nav-items-para">Quote</p>
            </div>
          </div>
        </div>
        <div title="Rate Calculator" class="nav-items" onclick="window.location.href = '/fairdesk/form/ratecalculator'" >
          <i class="fa-solid fa-calculator" style="color: #ffffff"></i>
          <p class="nav-items-para">Rate Calculator</p>
        </div>

        <div class="nav-opt-wrap">
          <div title="Rate Calculator" class="calc-toggle nav-items">
            <i class="fa-solid fa-square-caret-down" style="color: #ffffff"></i>
            <p class="nav-items-para">Rate Calculator</p>
          </div>

          <div class="nav-calc-opt">
            <div title="Sales Calculator" class="nav-items" onclick="window.location.href = '/fairdesk/form/salescalc'">
              <i class="fa-solid fa-money-bill-transfer" style="color: #ffffff"></i>
              <p class="nav-items-para">Sales Calculator</p>
            </div>
            <div title="Production Calculator" class="nav-items active" onclick="window.location.href = '/fairdesk/form/prodcalc'" >
              <i class="fa-solid fa-industry" style="color: #ffffff"></i>
              <p class="nav-items-para">Production Calculator</p>
            </div>
          </div>
        </div>
      </div>

      <!-- The main content -->
      <div class="main-content">
        <form action="/fairdesk/form/ratecalculator" class="needs-validation" method="post" novalidate>
          <div class="span-full form-heading">
            <h1>Production Planning & Calculation</h1>
          </div>

          <div class="span-full form-subheading">
            <h1>Sales Values</h1>
          </div>

          <div class="span-four">
            <label for="block-date">Date</label>
            <input type="date" id="block-date" class="form-control" name="blockDate" required />
          </div>          


          <div class="span-seven">
            <div class="clientName-label"><label for="company-name">Client Name</label><span class="asterisk" style="font-size: 14px;"></span></div>
            <select name="companyName" id="company-name" class="form-control select-tag" required>
              <option value="" selected disabled hidden>Select</option>
              <% for (let client of clients) { %>
                <option value="<%= client %>"><%= client %></option>
              <% } %>
            </select>
          </div>

          <div class="span-six">
            <label for="company-name">User Name</label>
            <select name="userName" id="user-name" class="form-control select-tag" required>
              <option value="" selected disabled hidden>Select</option>
              <% for (let client of clients) { %>
                <option value="<%= client %>"><%= client %></option>
              <% } %>
            </select>
          </div>

         <div class="span-three">
            <label for="label-width">Width</label>
            <input type="number" step="any" id="label-width" class="form-control input-tag" name="labelWidth" placeholder="Enter width" required />
          </div>

          <div class="span-three">
            <label for="label-height">Height</label>
            <input type="number" step="any" id="label-height" class="form-control input-tag" name="LabelHeight" placeholder="Enter height" required />
          </div>

          <div class="span-three">
            <label for="job-ups">job ups</label>
            <input type="number" oninput="limitToTwoChars(this)" id="job-ups" class="form-control input-tag" name="jobUps" placeholder="Enter job ups" required />
          </div>

          <div class="span-four">
            <label for="rate-per-1k">Rate Per K</label>
            <input type="number" step="any" id="rate-per-1k" class="form-control input-tag" name="perOneK" placeholder="Enter Rate Per 1000" required />
          </div>

          <div class="span-four">
            <label for="paper-type">Paper type</label>
            <input list="paper_type_options" id="paper-type" class="form-control input-tag" name="paperType" placeholder="Enter paper type" required />

            <datalist id="paper_type_options">
              <option value="Avery"></option>
              <option value="Chromo"></option>
              <option value="PVC / PP"></option>
              <option value="D.T"></option>
            </datalist>
          </div>

          <div class="span-three">
            <label for="printed">Printed</label>
            <select name="printed" id="printed" class="form-control select-tag" required>
              <option value="" selected disabled hidden>Select</option>
              <option value="Plain">Plain</option>
              <option value="Printed">Printed</option>
            </select>
          </div>

          <div class="span-four">
            <label for="job-name">Job Name</label>
            <input type="text" id="job-name" class="form-control input-tag" name="jobName" placeholder="Enter Job Name" required />
          </div>

          <div class="span-five">
            <label for="order-quantity">Order quantity</label>
            <input type="number" step="any" id="order-quantity" class="form-control input-tag" name="orderQuantity" placeholder="Enter order quantity" required />
          </div>

          <div class="span-four">
            <label for="prod-sale-area">Sales Area</label>
            <input type="number" step="any" id="prod-sale-area" class="form-control auto-calc input-tag" name="prodSaleArea" placeholder="Sales area" required />
          </div>           

          <div class="span-four">
            <label for="prod-sales-rate">Sales rate</label>
            <input type="number" step="any" id="prod-sales-rate" class="form-control auto-calc input-tag" name="prodSalesRate" placeholder="Sales rate" required />
          </div>    
          
          <div class="span-four">
            <label for="prod-order-value">Order value</label>
            <input type="number" step="any" id="prod-order-value" class="form-control auto-calc input-tag" name="prodOrderValue" placeholder="Order value" required />
          </div>
          
          <div class="span-four">
            <label for="prod-cost-percentage">Cost (%)</label>
            <input list="cost-list" id="prod-cost-percentage" class="form-control input-tag" name="cost" placeholder="Cost %" required />

            <datalist id="cost-list">
              <option value="1.45"></option>
              <option value="1.55"></option>
            </datalist>
          </div>          

          <div class="span-full form-subheading">
            <h1>Production Values</h1>
          </div>

          <div class="span-seven">
            <label for="prod-die-across">Die Across</label>
            <input type="number" step="any" id="prod-die-across" class="form-control auto-calc input-tag" name="prodDieAcross" placeholder="Enter die across" required />
          </div>

          <div class="span-six">
            <label for="prod-die-no">Die Number</label>
            <input type="number" step="any" id="prod-die-no" class="form-control auto-calc input-tag" name="prodDieno" placeholder="Enter die no" required />
          </div>

          <div class="span-six">
            <label for="prod-paper-size">Paper size</label>
            <input type="number" step="any" id="prod-paper-size" class="form-control auto-calc input-tag" name="prodPaperSize" placeholder="Enter paper size" required />
          </div>

          <div class="span-six">
            <label for="prod-paper-code">Paper Code</label>
            <input type="number" step="any" id="prod-paper-code" class="form-control auto-calc input-tag" name="prodPaperCode" placeholder="Enter paper code" required />
          </div>

          <div class="span-seven">
            <label for="prod-m-rate">Current Material Rate</label>
            <input type="number" step="any" id="prod-m-rate" class="form-control auto-calc input-tag" name="prodMRate" placeholder="Enter M rate" required />
          </div>
          
          <div class="btn-grp span-full">
            <button id="calc-btn" type="button">Calculate</button>
          </div>          

          <div class="span-full form-subheading">
            <h1>Calculated Values</h1>
          </div>          
          
            <div class="span-six">
              <label for="prod-area">Production Area</label>
              <input type="number" step="any" id="prod-area" class="form-control auto-calc input-tag" name="prodArea" placeholder="Production area" required />
            </div>
            
            <div class="span-five">
              <label for="prod-rate">Production rate</label>
              <input type="number" step="any" id="prod-rate" class="form-control auto-calc input-tag" name="productionRate" placeholder="Production rate" required />
            </div>

              <div class="span-five">
                <label for="prod-tot-sqr-m">Total sq mtrs</label>
                <input type="number" step="any" id="prod-tot-sqr-m" class="form-control auto-calc input-tag" name="prodSqMeter" placeholder="Total square meters" required />
              </div>

              <div class="span-five">
                <label for="prod-m-cost">M cost</label>
                <input type="number" step="any" id="prod-m-cost" class="form-control auto-calc input-tag" name="prodMCost" placeholder="M cost" required />
              </div>

              <div class="span-five">
                <label for="prod-margin">Margin</label>
                <input type="number" step="any" id="prod-margin" class="form-control auto-calc input-tag" name="prodMargin" placeholder="Margin" required />
              </div>             

              <div class="span-six">
                <label for="prod-actual-percentage">Actual (%)</label>
                <input type="text" id="prod-actual-percentage" class="form-control input-tag" name="prodActual" placeholder="Actual %" required />
              </div>              

          <div class="btn-grp span-full">
            <button class="view-btn" type="button">View Details</button>
            <button class="submit-btn" type="submit">Submit Order Details</button>
          </div>
        </div>

        </form>
      </div>
    </div>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/BTStrap.js"></script>
    <script src="/js/prodCalc.js" defer></script>
    <script src="/js/common.js"></script>
  </body>
</html>
