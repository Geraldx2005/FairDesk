<!-- Link to boilerplate.ejs -->
<% layout('/layout/boilerplate') -%>

<!-- Tabulator CSS -->
<link href="https://unpkg.com/tabulator-tables@5.5.2/dist/css/tabulator.min.css" rel="stylesheet" />
<link href="https://unpkg.com/tabulator-tables@5.6.2/dist/css/tabulator_modern.min.css" rel="stylesheet">

<style>
  /* Search and filter styles */
  .search-filters {
    margin: 20px 0px;
    padding: 15px;
    background-color: #f8f9fa;
    border-radius: 6px;
    box-shadow: 0 0px 10px rgba(0, 0, 0, 0.25);
  }

  .filters-container {
    display: flex;
    gap: 15px;
    align-items: flex-end;
    flex-wrap: wrap;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    min-width: 175px;
  }

  .filter-select {
    height: 2.75rem;
    font-size: 13px;
  }

  .filter-btn {
    height: 2.75rem;
    padding: 8px 12px;
    background-color: #1a1a2e;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
    font-weight: 450;
    transition: background-color 0.2s;
  }

  .filter-btn:hover {
    background-color: #16213e;
  }

  .filter-form {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }

  .input-tag {
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #ced4da;
    font-size: 13px;
    flex-grow: 1;
    max-width: 400px;
  }

  form {
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: space-between;
  }

  .search-form {
    /* flex: 1; */
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: space-between;
  }

  .search-input {
    min-width: 210px;
    max-width: 300px;
    height: 2.75rem;
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #16213e;
    font-size: 13px;
  }

  .search-input::placeholder {
    font-size: 13px;
  }

  h2 {
    margin-bottom: 20px;
    color: #333;
  }

  #master-table {
    border-radius: 8px;
    overflow: hidden;
    height: 90%;
    width: 100%;
  }

  .tabulator .tabulator-tableholder {
    overflow-y: auto !important; /* show scrollbar only when needed */
  }

  /* Entire header row */
.tabulator .tabulator-header {
  background-color: #1a1a2e !important;  /* Your custom color */
}

/* Individual header cells */
.tabulator .tabulator-col,
.tabulator .tabulator-col-content {
  background-color: #1a1a2e !important;
  color: #fff !important;
  font-size: 15px !important;
  font-weight: 600 !important; 
  padding: 2px 4px !important;
}


/* Apply to every cell in the table */
.tabulator .tabulator-cell {
  font-size: 14px;
  border: 2px solid transparent;
  padding: 2px 4px !important;
  transition: all 0.1s ease-in-out;
}

.tabulator .tabulator-cell:hover {
  border: 2px solid #1a1a2e; /* subtle border */
}

/* For vertical + horizontal scrollbars inside Tabulator */
.tabulator .tabulator-tableholder::-webkit-scrollbar {
  height: 10px;   /* horizontal thickness */
  width: 10px;    /* vertical thickness */
}

.tabulator .tabulator-tableholder::-webkit-scrollbar-track {
  background: #f1f1f1;
}

.tabulator .tabulator-tableholder::-webkit-scrollbar-thumb {
  background-color: #1a1a2e;
  border-radius: 6px;
}

.tabulator .tabulator-tableholder::-webkit-scrollbar-thumb:hover {
  background-color: #1a1a2e;
}

/* Firefox support */
.tabulator .tabulator-tableholder {
  scrollbar-width: thin;
  scrollbar-color: #1a1a2e #f1f1f1;
}

.tabulator .tabulator-row {
  transition: all 0.2s ease-in-out;
}

/* Remove Tabulator's default hover and apply custom */
.tabulator .tabulator-row:hover {
  background-color: rgba(140, 154, 173, 0.3) !important;
  color: #0f172a !important;
  cursor: pointer;
  border: none !important;
  transition: all 0.2s ease;
}

.download-btns {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #0f172a;
  }

  .download-btns button {
    height: 20px;
  }

  .download-btns button:hover {
    background-color: rgba(255, 255, 255, 0.85);
  }

  /* The download document dropdown */
  .download-selector {
    position: relative;
    display: inline-block;
    width: 160px; /* Fixed width for the dropdown */
  }

  .download-selector__trigger {
    background-color: #f0f0f0;
    color: #1a1a2e;
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 500;
    border: none;
    cursor: pointer;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    transition: all 0.2s ease-in-out;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .download-selector__trigger-icon {
    font-size: 12px;
    transition: all 0.2s ease-in-out;
  }

  .download-selector__menu {
    position: absolute;
    background-color: rgb(240, 240, 240);
    width: 100%;
    border: 1px solid #1a1a2e;
    border-radius: 0.5rem;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all 0.2s ease-in-out;
    right: 0;
    margin-top: 12px;
  }

  .download-selector--active .download-selector__menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .download-selector__option {
    color: #1a1a2e;
    padding: 8px 10px;
    font-size: 15px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 12px;
    transition: all 0.2s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    background-color: rgb(240, 240, 240);
    border-radius: 0.5rem;
    cursor: pointer;
    width: auto;
    height: auto;
  }

  .download-selector__option:hover {
    background-color: rgb(216, 216, 216);
    border-radius: 0.5rem;
  }

  .download-selector__option-icon {
    width: 20px;
    color: #1a1a2e;
  }

  .download-typo {
    margin-left: 2px;
  }

  .indi-head {
    width: 100%;
    border-radius: 0.5rem;
    padding: 0.4rem 0.8rem;
    background-color: #1a1a2e;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
  }

  .indi-head h1 {
    margin: 0;
    font-size: 1.25rem;
  }

  /* Make empty tabulator area !grey */
  .tabulator {
    background-color: #f0f2f5 !important;
  }

  .tabulator .tabulator-tableholder {
    background-color: #f0f2f5 !important;
  }

  .tabulator .tabulator-table {
    background-color: #f0f2f5 !important;
  }

  /* When there is no data */
  .tabulator .tabulator-placeholder {
    background-color: #f0f2f5 !important;
    color: #666; /* optional */
  }

  /* Remove sort arrows from Tabulator header */
  .tabulator .tabulator-col .tabulator-arrow {
    display: none !important;
  }
  
  /* Also remove space reserved for arrow */
  .tabulator .tabulator-col .tabulator-col-title {
    padding-right: 0 !important;
  } 
</style>
</head>

<body>
  <div class="contain" style="flex-direction: column; padding: 10px; gap: 10px" >
      <div class="indi-head">
        <h1>Labels</h1>
        <div class="download-btns">
          <div class="download-selector" id="downloadSelector">
            <button class="download-selector__trigger">
              <span>
                <i class="fa-solid fa-file-arrow-down"></i>
                <span class="download-typo">Download</span>
              </span>
              <i class="fas fa-chevron-down download-selector__trigger-icon"></i>
            </button>
            <div class="download-selector__menu" id="downloads">
              <span class="download-selector__option" id="download-pdf">
                <i class="fas fa-file-pdf download-selector__option-icon"></i>
                <span>PDF</span>
              </span>
              <span class="download-selector__option" id="download-xlsx">
                <i class="fas fa-file-excel download-selector__option-icon"></i>
                <span>Excel</span>
              </span>
            </div>
          </div>
      </div>
    </div>

    <div id="master-table" class="tabulator tabulator-modern"></div>
</div>

  <!-- Tabulator JS -->
  <script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.29/jspdf.plugin.autotable.min.js"></script>


  <script>
    // Render data from Express (passed into EJS)
    const tableData = JSON.parse('<%- JSON.stringify(jsonData) %>');

    // Initialize Tabulator
    const table = new Tabulator("#master-table", {
      data: tableData,
      layout: "fitDataTable",
      responsiveLayout: false,
      pagination: "local",
      paginationSize: 30,
      movableColumns: true,
      placeholder: "No data to display",
      columns: [
        { title: "Client Name", field: "clientName" },
        { title: "User Name", field: "userName" },
        { title: "User Contact", field: "userContact" },
        { title: "Location", field: "location" },
        { title: "Instructions", field: "instructions" },
        { title: "Varnish", field: "varnish" },
        { title: "foil NO", field: "foilNo" },
        { title: "Paper Type", field: "paperType" },
        { title: "Width", field: "labelWidth" },
        { title: "Height", field: "labelHeight" },
        { title: "Gap", field: "labelGap" },
        { title: "Ups", field: "labelUps" },
        { title: "Core", field: "labelCore" },
        { title: "Per Roll Qty", field: "perRollQty" }, 
        { title: "First Out", field: "firstOut" },
        { title: "Rate Per 1K", field: "ratePerK" },
        { title: "Rate Per Label", field: "ratePerLabel" },
        { title: "Per Roll", field: "perRoll" },
        { title: "Sale Cost", field: "saleCost" },
        { title: "Min Order Qty", field: "minOrderQty" },
        { title: "Rep Order Frequency", field: "repOrderFq" },
        { title: "credit Term", field: "creditTerm" },
      ]
    });

    // Dropdown toggle
    const selector = document.getElementById("downloadSelector");
    const trigger = selector.querySelector(".download-selector__trigger");
    
    trigger.addEventListener("click", (e) => {
      e.stopPropagation();
      selector.classList.toggle("download-selector--active");
    });
  
    // Close dropdown on outside click
    document.addEventListener("click", () => {
      selector.classList.remove("download-selector--active");
    });
  
    // PDF download
    document.getElementById("download-pdf").addEventListener("click", () => {
      table.download("pdf", "labels.pdf", {
        orientation: "landscape",
        title: "Labels Data",
      });
      selector.classList.remove("download-selector--active");
    });
  
    // Excel download
    document.getElementById("download-xlsx").addEventListener("click", () => {
      table.download("xlsx", "labels.xlsx", {
        sheetName: "Labels",
      });
      selector.classList.remove("download-selector--active");
    });

  </script>
</body>
