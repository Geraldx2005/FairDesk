<!-- Link to boilerplate.ejs -->
<% layout('/layout/boilerplate') -%>

<!-- Tabulator CSS -->
<link href="https://unpkg.com/tabulator-tables@5.5.2/dist/css/tabulator.min.css" rel="stylesheet" />
<link href="https://unpkg.com/tabulator-tables@5.6.2/dist/css/tabulator_modern.min.css" rel="stylesheet">

<style>
  /* Search and filter styles */
  .search-filters {
    margin: 20px 0px;
    padding: 15px;
    background-color: #f8f9fa;
    border-radius: 6px;
    box-shadow: 0 0px 10px rgba(0, 0, 0, 0.25);
  }

  .filters-container {
    display: flex;
    gap: 15px;
    align-items: flex-end;
    flex-wrap: wrap;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    min-width: 175px;
  }

  .filter-select {
    height: 2.75rem;
    font-size: 13px;
  }

  .filter-btn {
    height: 2.75rem;
    padding: 8px 12px;
    background-color: #1a1a2e;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
    font-weight: 450;
    transition: background-color 0.2s;
  }

  .filter-btn:hover {
    background-color: #16213e;
  }

  .filter-form {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }

  .input-tag {
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #ced4da;
    font-size: 13px;
    flex-grow: 1;
    max-width: 400px;
  }

  form {
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: space-between;
  }

  .search-form {
    /* flex: 1; */
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: space-between;
  }

  .search-input {
    min-width: 210px;
    max-width: 300px;
    height: 2.75rem;
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #16213e;
    font-size: 13px;
  }

  .search-input::placeholder {
    font-size: 13px;
  }

  h2 {
    margin-bottom: 20px;
    color: #333;
  }

  #master-table {
    border-radius: 8px;
    overflow: hidden;
    height: 90%;
    width: 100%;
  }

  .tabulator .tabulator-tableholder {
    overflow-y: auto !important; /* show scrollbar only when needed */
  }

  /* Entire header row */
.tabulator .tabulator-header {
  background-color: #1a1a2e !important;  /* Your custom color */
}

/* Individual header cells */
.tabulator .tabulator-col,
.tabulator .tabulator-col-content {
  background-color: #1a1a2e !important;
  color: #fff !important;
  font-size: 15px !important;
  font-weight: 600 !important; 
  padding: 2px 4px !important;
}


/* Apply to every cell in the table */
.tabulator .tabulator-cell {
  font-size: 14px;
  border: 2px solid transparent;
  padding: 2px 4px !important;
  transition: all 0.1s ease-in-out;
}

.tabulator .tabulator-cell:hover {
  border: 2px solid #1a1a2e; /* subtle border */
}

/* For vertical + horizontal scrollbars inside Tabulator */
.tabulator .tabulator-tableholder::-webkit-scrollbar {
  height: 10px;   /* horizontal thickness */
  width: 10px;    /* vertical thickness */
}

.tabulator .tabulator-tableholder::-webkit-scrollbar-track {
  background: #f1f1f1;
}

.tabulator .tabulator-tableholder::-webkit-scrollbar-thumb {
  background-color: #1a1a2e;
  border-radius: 6px;
}

.tabulator .tabulator-tableholder::-webkit-scrollbar-thumb:hover {
  background-color: #1a1a2e;
}

/* Firefox support */
.tabulator .tabulator-tableholder {
  scrollbar-width: thin;
  scrollbar-color: #1a1a2e #f1f1f1;
}

.tabulator .tabulator-row {
  transition: all 0.2s ease-in-out;
}

/* Remove Tabulator's default hover and apply custom */
.tabulator .tabulator-row:hover {
  background-color: rgba(140, 154, 173, 0.3) !important;
  color: #0f172a !important;
  cursor: pointer;
  border: none !important;
  transition: all 0.2s ease;
}


</style>
</head>

<body>
  <div
    class="contain" style="flex-direction: column; padding: 10px; gap: 10px" >
    <form method="get" action="http://localhost:3000/fairdesk/filter">
      <div class="search-form">
        <input type="text" name="search" placeholder="Search by Client Name or ID" class="form-control input-tag search-input"  />
        <button type="submit" class="filter-btn"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i></button>
      </div>      
      <div class="filters-container">
        <div class="filter-group">
          <select class="filter-select" id="departmentFilter" name="department">
            <option value="" selected disabled hidden>Choose Client Type</option>
            <option value="DEALER">DEALER</option>
            <option value="CLIENT">CLIENT</option>
          </select>
        </div>

        <div class="filter-group">
          <select class="filter-select" id="batchFilter" name="batch">
            <option value="" disabled hidden selected>
              Choose Client Status
            </option>
            <option value="ACTIVE">ACTIVE</option>
            <option value="INACTIVE">INACTIVE</option>
            <option value="FOLLOW UP">FOLLOW UP</option>
            <option value="BLACKLISTED">BLACKLISTED</option>
            <option value="ADVANCED">ADVANCED</option>
            <option value="OTHERS">OTHERS</option>
          </select>
        </div>
      </div>
    </form>

    <div id="master-table" class="tabulator tabulator-modern"></div>
</div>

  <!-- Tabulator JS -->
  <script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>

  <script>
    // Render data from Express (passed into EJS)
    const tableData = JSON.parse('<%- JSON.stringify(jsonData) %>');

    tableData.forEach(user => {
      user.labelCount = user.label?.length || 0;
      user.ttrCount = user.ttr?.length || 0;
      user.tapeCount = user.tape?.length || 0;
    });

    console.log(tableData);

    // Initialize Tabulator
    new Tabulator("#master-table", {
      data: tableData,
      layout: "fitDataTable", // expand to fit content + allow horizontal scroll
      responsiveLayout: false, // prevent auto-hiding of columns
      pagination: "local",
      paginationSize: 30,
      movableColumns: true,
      columns: [
        { title: "Tape Product ID", field: "tapeTroductId" },
        { title: "Client Name", field: "clientName" },
        { title: "User Name", field: "userName" },
        { title: "User Contact", field: "userContact" },
        { title: "Location", field: "location" },
        { title: "Tape Paper Code", field: "tapePaperCode" },
        { title: "Tape GSM", field: "tapeGsm" },
        { title: "Tape Client Paper Code", field: "tapeClientPaperCode" },
        { title: "Client Tape GSM", field: "clientTapeGsm" },
        { title: "Tape Paper Type", field: "tapePaperType" },
        { title: "Tape Width", field: "tapeWidth" },
        { title: "Tape Mtrs", field: "tapeMtrs" },
        { title: "Tape Mtrs Del", field: "tapeMtrsDel" },
        { title: "Tape Core ID", field: "tapeCoreId" },
        { title: "Tape Rate Per Roll", field: "tapeRatePerRoll" },
        { title: "Tape Sale Cost", field: "tapeSaleCost" },
        { title: "Tape Min Qty", field: "tapeMinQty" },
        { title: "Tape Order Qty", field: "tapeOdrQty" },
        { title: "Tape Order Freq", field: "tapeOdrFreq" },
        { title: "Tape Credit Term", field: "tapeCreditTerm" },
      ]
    });
  </script>
</body>
